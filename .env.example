# Configurações do PaddleOCR Service
# Copie este arquivo para .env e ajuste conforme necessário

# API Configuration
PADDLEOCR_API_KEY=paddleocr-key-2024
HOST=0.0.0.0
PORT=8000
DEBUG=false
WORKERS=2

# PaddleOCR Configuration
ENABLE_GPU=false
PADDLE_OCR_LANG=pt
USE_ANGLE_CLS=true
USE_SPACE_CHAR=true

# File Processing
MAX_FILE_SIZE=10485760
CONFIDENCE_THRESHOLD=0.7
MIN_TEXT_LENGTH=3
MAX_PROCESSING_TIME=300

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_DB=0
CACHE_TTL=3600

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/paddleocr.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# Directories
TEMP_DIR=./temp
UPLOAD_DIR=./uploads

# Performance
MAX_REQUESTS=1000
MAX_REQUESTS_JITTER=100
KEEPALIVE=2
TIMEOUT=300

# Security
CORS_ORIGINS=*
RATE_LIMIT_PER_MINUTE=60

# Optional: External APIs (se necessário)
# OPENAI_API_KEY=your_openai_key_here
# ANTHROPIC_API_KEY=your_anthropic_key_here

# Optional: Monitoring (se usar)
# SENTRY_DSN=your_sentry_dsn_here
# PROMETHEUS_PORT=9090

# Optional: Database (se expandir funcionalidades)
# DATABASE_URL=postgresql://user:pass@localhost/paddleocr
