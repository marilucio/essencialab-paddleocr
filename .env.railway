# Configurações otimizadas para Railway

# API Configuration
PADDLEOCR_API_KEY=paddleocr-essencialab-2024-secure
HOST=0.0.0.0
DEBUG=false
WORKERS=1

# PaddleOCR Configuration
ENABLE_GPU=false
PADDLE_OCR_LANG=pt
USE_ANGLE_CLS=true
USE_SPACE_CHAR=true
PADDLEOCR_HOME=/tmp/.paddleocr

# Performance - Otimizado para Railway
MAX_FILE_SIZE=10485760
CONFIDENCE_THRESHOLD=0.7
MIN_TEXT_LENGTH=3
MAX_PROCESSING_TIME=300
MAX_REQUESTS=1000
MAX_REQUESTS_JITTER=100
KEEPALIVE=5
TIMEOUT=300

# Redis - Desabilitado inicialmente
REDIS_URL=redis://localhost:6379
REDIS_DB=0
CACHE_TTL=3600

# Diretórios - Usar /tmp no Railway
TEMP_DIR=/tmp/temp
UPLOAD_DIR=/tmp/uploads
LOG_FILE=/tmp/paddleocr.log

# Logging
LOG_LEVEL=INFO
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# CORS
CORS_ORIGINS=*
RATE_LIMIT_PER_MINUTE=60